{
  "manifest_version": 2,
  "name": "Phishing Detection Plugin",
  "version": "0.1",
  "description": "Blocks possible phishing requests",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "blocked.html",
    "blocked.png"
  ],
  "background": {
    "scripts": ["firefox.js"]
  },
  "icons": {
    "48": "shield.png"
  },
  "browser_action": {
    "default_icon": "shield.png",
    "default_title": "Phishing Detection Plugin",
    "default_popup": "settings.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "settings.html"
  }
}