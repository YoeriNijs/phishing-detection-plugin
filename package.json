{
  "name": "phishing-detection-plugin",
  "version": "0.0.1",
  "description": "A modular phishing detection plugin for Chrome and Firefox",
  "main": "index.js",
  "scripts": {
    "lint": "npx prettier . --write",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "husky",
    "clean:firefox": "rm -rf ./build/firefox",
    "build:firefox": "npm run clean:firefox && webpack --config webpack.firefox.plugin.js && webpack --config webpack.firefox.settings.js"
  },
  "author": "Yoeri Nijs",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/jest": "29.5.14",
    "@types/node": "^22.15.29",
    "copy-webpack-plugin": "^13.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm run lint",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
